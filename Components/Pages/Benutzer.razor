@page "/benutzer"
@rendermode InteractiveServer
@using BildungsBericht.Models
@inherits BenutzerBase
@attribute [StreamRendering]

<PageTitle>Benutzerverwaltung - Bildungsbericht</PageTitle>

<div class="container mt-4">
    <div class="page-header">
        <h1>👥 Benutzerverwaltung</h1>
        <p class="lead">Übersicht aller Benutzer im System</p>
    </div>

    @if (!string.IsNullOrEmpty(StatusMessage))
    {
        <div class="alert @(IsError ? "alert-danger" : "alert-success") alert-dismissible fade show" role="alert">
            @StatusMessage
            <button type="button" class="btn-close" @onclick="() => StatusMessage = null"></button>
        </div>
    }

    <div class="card">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0">Benutzer</h3>
        </div>
        <div class="card-body">
            @if (Benutzers == null)
            {
                <div class="text-center p-5">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Lädt...</span>
                    </div>
                    <p class="mt-3">Benutzer werden geladen...</p>
                </div>
            }
            else if (!Benutzers.Any())
            {
                <div class="alert alert-warning">
                    <strong>Keine Benutzer gefunden.</strong> Es sind derzeit keine Benutzer im System vorhanden.
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover table-striped">
                        <thead class="table-primary">
                            <tr>
                                <th>ID</th>
                                <th>Vorname</th>
                                <th>Nachname</th>
                                <th>Aktionen</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var benutzer in Benutzers)
                            {
                                <tr>
                                    <td>@benutzer.BenutzerId</td>
                                    <td>@benutzer.FirstName</td>
                                    <td>@benutzer.LastName</td>
                                    <td>
                                        <button class="btn btn-sm btn-primary" disabled>Details</button>
                                        <button class="btn btn-sm btn-success" disabled>Bearbeiten</button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                
                <div class="mt-3">
                    <p class="text-muted">Anzahl Benutzer: @Benutzers.Count()</p>
                </div>
            }
            
            <div class="mt-4">
                <button class="btn btn-success" @onclick="OpenCreateModal">
                    <i class="bi bi-plus-circle"></i> Neuen Benutzer hinzufügen
                </button>
            </div>
        </div>
    </div>
</div>

@* Modal für neuen Benutzer *@
@if (ShowCreateModal)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title">Neuen Benutzer erstellen</h5>
                    <button type="button" class="btn-close btn-close-white" @onclick="CloseCreateModal" disabled="@IsCreating"></button>
                </div>
                <div class="modal-body">
                    <EditForm Model="NewBenutzer" OnValidSubmit="CreateBenutzer">
                        <DataAnnotationsValidator />
                        <ValidationSummary class="text-danger" />

                        <div class="mb-3">
                            <label for="vorname" class="form-label">Vorname <span class="text-danger">*</span></label>
                            <InputText id="vorname" class="form-control" @bind-Value="NewBenutzer.Vorname" disabled="@IsCreating" placeholder="Max" />
                            <ValidationMessage For="@(() => NewBenutzer.Vorname)" />
                        </div>

                        <div class="mb-3">
                            <label for="nachname" class="form-label">Nachname <span class="text-danger">*</span></label>
                            <InputText id="nachname" class="form-control" @bind-Value="NewBenutzer.Nachname" disabled="@IsCreating" placeholder="Mustermann" />
                            <ValidationMessage For="@(() => NewBenutzer.Nachname)" />
                        </div>

                        <div class="mb-3">
                            <label for="email" class="form-label">Email</label>
                            <InputText id="email" class="form-control" @bind-Value="NewBenutzer.Email" disabled="@IsCreating" placeholder="max.mustermann@example.com" />
                            <ValidationMessage For="@(() => NewBenutzer.Email)" />
                        </div>

                        <div class="mb-3">
                            <label for="geburtsdatum" class="form-label">Geburtsdatum</label>
                            <InputDate id="geburtsdatum" class="form-control" @bind-Value="NewBenutzer.Geburtsdatum" disabled="@IsCreating" />
                            <ValidationMessage For="@(() => NewBenutzer.Geburtsdatum)" />
                        </div>

                        <div class="mb-3">
                            <label for="passwort" class="form-label">Passwort <span class="text-danger">*</span></label>
                            <InputText id="passwort" type="password" class="form-control" @bind-Value="NewBenutzer.Passwort" disabled="@IsCreating" placeholder="Passwort eingeben" />
                            <ValidationMessage For="@(() => NewBenutzer.Passwort)" />
                        </div>

                        <div class="mb-3">
                            <label for="rolleId" class="form-label">Rolle <span class="text-danger">*</span></label>
                            <InputSelect id="rolleId" class="form-select" @bind-Value="NewBenutzer.RolleId" disabled="@IsCreating">
                                <option value="1">Lernender</option>
                                <option value="2">Berufsbildner</option>
                                <option value="3">Lehrperson</option>
                                <option value="4">Administrator</option>
                            </InputSelect>
                        </div>

                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" @onclick="CloseCreateModal" disabled="@IsCreating">
                                Abbrechen
                            </button>
                            <button type="submit" class="btn btn-primary" disabled="@IsCreating">
                                @if (IsCreating)
                                {
                                    <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                                    <span>Erstellen...</span>
                                }
                                else
                                {
                                    <span>Erstellen</span>
                                }
                            </button>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
}


<style>
    .page-header {
        margin-bottom: 30px;
        padding-bottom: 20px;
        border-bottom: 3px solid #0066cc;
    }

    .card {
        border: 2px solid #0066cc;
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .card-header.bg-primary {
        background-color: #0066cc !important;
        border-radius: 8px 8px 0 0;
    }

    .lead {
        color: #666;
    }

    .table-primary {
        background-color: #e6f2ff !important;
    }

    .table-hover tbody tr:hover {
        background-color: #f0f8ff;
    }

    .btn-sm {
        margin-right: 5px;
    }

    .modal.show {
        display: block;
    }
</style>

